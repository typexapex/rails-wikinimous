<p id="notice"><%= notice %></p>
<div class="wrapper">
  <h1>Articles</h1>
  <div class="left">
    <div class="left-inner">
      <ul style="list-style: none;">
        <% @articles.each do |article| %>
          <li><%= article.title %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="right">
    <div class="right-inner">
      <ul style="list-style: none;">
        <% @articles.each do |article| %>
          <li><%= link_to article do %><i class="far fa-eye"></i><% end %><%= article.content %><%= link_to 'Edit', edit_article_path(article) %><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <br>

  <%= link_to 'New Article', new_article_path %>
</div>


